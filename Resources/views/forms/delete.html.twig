{% extends "@c975LExceptionChecker/layout.html.twig" %}
{% trans_default_domain 'exceptionChecker' %}
{% set title = 'label.delete'|trans({}, 'toolbar') ~ ': ' ~ exceptionChecker.id %}

{% block exceptionchecker_content %}
{# Toolbar #}
    {{ toolbar_display('@c975LExceptionChecker/tools.html.twig', 'delete', 'md', exceptionChecker) }}
{# Form #}
    {{ form_start(form) }}
        {{ form_widget(form) }}
{# Submit #}
        <div class="form-group">
            <button type="submit" name="submit" title="{{ 'label.delete'|trans({}, 'toolbar') }}" class="btn btn-lg btn-danger btn-block">
                <span class="fas fa-trash"></span> {{ 'label.delete'|trans({}, 'toolbar') }}
            </button>
        </div>
    {{ form_end(form) }}
{% endblock %}