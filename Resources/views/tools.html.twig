{% trans_default_domain 'toolbar' %}

{% spaceless %}
{# Dashboard #}
{{ toolbar_button(path('exceptionchecker_dashboard'), 'dashboard', 'label.exceptionchecker'|trans) }}

{# Display #}
{% if type != 'dashboard' and type != 'display' and type != 'help' and type != 'new' %}
    {{ toolbar_button(path('exceptionchecker_display', {'id': object.id}), 'display') }}
{% endif %}

{# New #}
{% if type != 'new' %}
    {{ toolbar_button(path('exceptionchecker_new'), 'new') }}
{% endif %}

{# Modify #}
{% if type != 'dashboard' and type != 'modify' and type != 'help' and type != 'new' %}
    {{ toolbar_button(path('exceptionchecker_modify', {'id': object.id}), 'modify') }}
{% endif %}

{# Duplicate #}
{% if type == 'display' or type == 'modify' %}
    {{ toolbar_button(path('exceptionchecker_duplicate', {'id': object.id}), 'duplicate') }}
{% endif %}

{# Cancel #}
{% if type != 'dashboard' %}
    {{ toolbar_button('cancel', 'cancel') }}
{% endif %}

{# Delete #}
{% if type != 'dashboard' and type != 'delete' and type != 'help' and type != 'new' %}
    {{ toolbar_button(path('exceptionchecker_delete', {'id': object.id}), 'delete') }}
{% endif %}

{# Help #}
{% if type != 'help' %}
    {{ toolbar_button(path('exceptionchecker_help'), 'help') }}
{% endif %}

{# Signout #}
{{ toolbar_button(path('user_signout'), 'signout') }}

{# Other dashboards #}
{{ toolbar_dashboards('md') }}
{% endspaceless %}